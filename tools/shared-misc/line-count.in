#!@PERL@

$lines = 0;
$comments = 0;
$blanks = 0;
$code = 0;
for $file (@ARGV) {
    if ($file =~ /.dylan$/) {
        $type = "dylan";
    } else {
        $type = "perl";
    }
    open(FILE, $file);
    while (<FILE>) {
        $lines++;
        if (/^\s*$/) {
            $blanks++;
        } elsif ($type eq "dylan" && m|^\s*//|) {
            $comments++;
        } elsif ($type eq "perl" && m|^\s*\#|) {
            $comments++;
        } else {
            $code++;
        }
    }
}

print "Lines of code: $code\n";
print "Comment lines: $comments\n";
print "Blank lines:   $blanks\n";
print "Total:         $lines\n";
